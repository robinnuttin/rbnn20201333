# Firebase Configuration
# Get these values from Firebase Console -> Project Settings
REACT_APP_FIREBASE_API_KEY=your_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
REACT_APP_FIREBASE_APP_ID=1:your_app_id

# Google Gemini API (existing)
VITE_GEMINI_API_KEY=your_gemini_key_here

# GoHighLevel API (existing)
VITE_GHL_API_KEY=your_ghl_api_key_here
VITE_GHL_LOCATION_ID=your_ghl_location_id_here

# Instantly.ai API (existing)
VITE_INSTANTLY_API_KEY=your_instantly_api_key_here

# Email Service (new)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your_sendgrid_api_key

# Klaviyo API (new)
REACT_APP_KLAVIYO_API_KEY=your_klaviyo_api_key

# MCP Server (for SMS via iMessage)
MCP_SERVER_URL=http://localhost:3001
MCP_SERVER_TOKEN=your_mcp_token

# Optional: Enable features
REACT_APP_ENABLE_FIRESTORE=false
REACT_APP_ENABLE_SMS_QUEUE=false
